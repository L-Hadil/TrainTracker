<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème de l'application -->
    <style name="Theme.TrainTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/colorMustard</item>
        <item name="colorPrimaryVariant">@color/colorMustard</item>
        <item name="colorOnPrimary">@color/colorBlack</item>

        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/colorBlue</item>
        <item name="colorSecondaryVariant">@color/colorBlue</item>
        <item name="colorOnSecondary">@color/colorWhite</item>

        <!-- Couleur de la barre de statut -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Désactiver la surcharge de couleur sur les boutons -->
        <item name="materialButtonStyle">@style/MyCustomButtonStyle</item>
    </style>

    <!-- Style personnalisé pour les boutons -->
    <style name="MyCustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@null</item> <!-- Supprime la teinte -->
        <item name="android:background">@drawable/background_rounded_blue</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
