<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème de nuit -->
    <style name="Theme.TrainTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/colorBlue</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <!-- Couleur secondaire -->
        <item name="colorSecondary">@color/colorMustard</item>
        <item name="colorSecondaryVariant">@color/colorMustard</item>
        <item name="colorOnSecondary">@color/colorBlack</item>

        <!-- Fond noir en mode sombre -->
        <item name="android:windowBackground">@color/colorBlack</item>

        <!-- Barre de statut -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Désactiver la surcharge de couleur sur les boutons -->
        <item name="materialButtonStyle">@style/MyCustomButtonStyle</item>
    </style>

    <!-- Style personnalisé pour les boutons -->
    <style name="MyCustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@null</item> <!-- Désactive toute surcharge -->
        <item name="android:background">@drawable/background_rounded_blue</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
